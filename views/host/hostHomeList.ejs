<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Your Listed Homes</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (homes.length > 0) { %>
          <% homes.forEach(home => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
              <div class="p-4">
                <h2 class="text-xl font-semibold mb-2"><%= home.houseName %></h2>
                <p class="text-gray-600 mb-2">Location: <%= home.location %></p>
                <p class="text-gray-600 mb-2">Price: $<%= home.price %>/night</p>
                <p class="text-gray-600">Rating: <%= home.rating %>/5</p>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="col-span-full text-center text-gray-600">No homes listed yet.</p>
        <% } %>
      </div>
    </main>
  </body>
</html>